<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.restaurant.RestaurantPageActivity">


    <ImageView
        android:id="@+id/restaurant_detail_image"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true">
    </ImageView>

    <LinearLayout
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/restaurant_detail_image"
        android:orientation="horizontal"
        android:layout_height="120dp"
        android:id="@+id/linear_layout_1_in_res"
        android:layout_width="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="6"
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <TextView
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/restaurant_detail_name"
                android:text="Name"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                >
            </TextView>
            <TextView
                android:id="@+id/restaurant_category"
                android:text="Thai, Bar"
                android:layout_marginLeft="18dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                >
            </TextView>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="12dp"
                android:id="@+id/restaurant_address"
                android:text="2097 Board Way, San Jose, CA, 95111"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                >
            </TextView>
        </LinearLayout>

        <TextView
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="$$$"
            android:textSize="20dp"
            android:id="@+id/price_level"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_width="50dp">

        </TextView>


    </LinearLayout>

