<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardElevation="3dp"
        app:cardCornerRadius="10dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="#a997c4">

            <ImageView
                android:id="@+id/full_image"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:src="@drawable/post_photo"
                android:scaleType="centerCrop"
                android:gravity="bottom" />

            <TextView
                android:id="@+id/name_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/full_image"
                android:textSize="17sp"
                android:layout_marginTop="12dp"
                android:textColor="@color/black"
                android:text="A Guide To Rocky Mountain Vacations"/>


            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="22dp"
                android:layout_height="23dp"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="12dp"
                android:layout_below="@+id/name_text_view"
                android:src="@drawable/ic_launcher_background"/>

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_below="@id/name_text_view"
                android:layout_toRightOf="@id/profile_image"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="7dp"
                android:textColor="@color/black"
                android:text="Ryan Estrada"/>



            <TextView
                android:id="@+id/time_stamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_text_view"
                android:layout_alignParentRight="true"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="12dp"
                android:layout_toRightOf="@id/profile_name"
                android:gravity="right"
                android:text="2 hours ago"
                android:textSize="14sp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>